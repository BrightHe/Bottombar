<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fbfafb">

    <RelativeLayout
        android:id="@+id/title_b"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/back_s"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_back"
            android:clickable="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/back"
            android:clickable="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/back_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/view0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/col_image"
            android:clickable="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/col_normal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/img_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/g_img"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/kimg"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_num"
                android:layout_below="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:id="@+id/g_num_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="商品ID："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/g_goods_id"
                    android:layout_toRightOf="@+id/g_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_name_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="商品名称："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_goods_name"
                    android:layout_toRightOf="@+id/g_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_type_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="商品类型："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_typeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_alignBaseline="@+id/g_type_txt"
                    android:layout_alignBottom="@+id/g_type_txt"
                    android:layout_toRightOf="@+id/g_type_txt"
                    android:layout_toEndOf="@+id/g_type_txt"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/quality_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="商品数量："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_quality_num"
                    android:layout_toRightOf="@+id/quality_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/uint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/g_quality_num"
                    android:layout_marginLeft="5dp"
                    android:text="单位"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="商品价格："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/price_num"
                    android:layout_toRightOf="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/price_num"
                    android:text="元"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_user_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="发布者："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_username"
                    android:layout_toRightOf="@+id/g_user_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_id_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="发布者ID："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_id_user"
                    android:layout_toRightOf="@+id/g_id_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_phone_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="联系方式："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_phone_user"
                    android:layout_toRightOf="@+id/g_phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_qq_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="联系QQ："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_qq_user"
                    android:layout_toRightOf="@+id/g_qq_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_weixin_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="联系微信："
                    android:textSize="17sp"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_weixin_user"
                    android:layout_toRightOf="@+id/g_weixin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/g_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/g_description_txt"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="关于说明："
                    android:textSize="17sp"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/g_description_goods"
                    android:layout_toRightOf="@+id/g_description_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未定义"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>