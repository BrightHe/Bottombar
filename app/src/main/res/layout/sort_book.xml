<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a15927.bottombardemo.sortactivity.SortBook">

    <RelativeLayout
        android:id="@+id/title_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0895e7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back5"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_left"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="分类:书籍"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="51dp"
        android:layout_below="@+id/title_book"
        android:layout_marginTop="2dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

        <include
            android:id="@+id/layout_net_failed1"
            layout="@layout/net_failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>
